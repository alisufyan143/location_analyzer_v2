# ============================================================
# Location Analyzer v2 â€” Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# NEVER commit .env to version control!
# ============================================================

# --- Database ---
# Development (SQLite - default)
DATABASE_URL=sqlite:///./data/location_analyzer.db

# Production (PostgreSQL - uncomment and fill in)
# DATABASE_URL=postgresql://user:password@localhost:5432/location_analyzer

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_CORS_ORIGINS=["*"]

# --- Scraping ---
# Request throttling (seconds, random between min and max)
SCRAPER_MIN_DELAY=2.0
SCRAPER_MAX_DELAY=8.0
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=30

# Proxy (optional - comma-separated list)
# SCRAPER_PROXIES=http://proxy1:8080,http://proxy2:8080

# Browser mode
SCRAPER_HEADLESS=true

# --- ML ---
ML_MODELS_DIR=models
ML_DEFAULT_METRIC=rmse

# --- Paths ---
DATA_DIR=data
DEMOGRAPHIC_DATA_DIR=data/demographic_data
OUTPUT_DIR=data/output
CACHE_DIR=data/cache
PLOTS_DIR=data/plots

# --- ngrok (development) ---
# NGROK_AUTH_TOKEN=your_token_here
# NGROK_DOMAIN=your-domain.ngrok-free.app

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=logs/location_analyzer.log
